<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center"
    android:background="#121212">


    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movimiento\nDetectado"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Tarjeta de gravedad -->
    <TextView
        android:id="@+id/tvGravedad"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#2E7D32"
        android:gravity="center"
        android:layout_marginBottom="32dp" />


    <LinearLayout
        android:id="@+id/barraGravedad"
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <View
            android:id="@+id/barraVerde"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#81C784"
            android:layout_marginEnd="6dp" />

        <View
            android:id="@+id/barraAmarilla"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFF59D"
            android:layout_marginEnd="6dp" />

        <View
            android:id="@+id/barraRoja"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E57373"
            />
    </LinearLayout>

    <!-- Alerta -->
    <TextView
        android:id="@+id/tvAlerta"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="¡Alerta!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#424242"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Última alerta -->
    <TextView
        android:id="@+id/tvUltimaAlerta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Última alerta recibida: ---"
        android:textColor="#BDBDBD"
        android:textSize="14sp"
        android:gravity="center" />

</LinearLayout>